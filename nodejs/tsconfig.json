{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "listEmittedFiles": true,
//    "listFiles": true,
    "noEmit": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~shared/*": [
        "src-shared/*"
      ],
      "~api/*": [
        "src-api/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src-shared/**/*",
    "src-api/**/*"
  ],
  "exclude": [
    ".quasar",
    "dist",
    "node_modules"
  ]
}
